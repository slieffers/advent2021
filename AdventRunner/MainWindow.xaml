<Window x:Class="AdventRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="MainTextBox" HorizontalAlignment="Center" Height="167" Margin="0,217,0,0" Text="Select a day to see results" TextWrapping="Wrap" VerticalAlignment="Top" Width="598"/>
        <Button Content="Run Advent" HorizontalAlignment="Left" Margin="101,99,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ComboBox x:Name="DaySelect" HorizontalAlignment="Left" Margin="206,98,0,0" VerticalAlignment="Top" Width="150" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem IsSelected="True">Select Advent Day</ComboBoxItem>
            <ComboBoxItem>Day 1</ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
